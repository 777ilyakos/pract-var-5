<Window x:Class="_14.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14"
        mc:Ignorable="d"
        Title="Настройки" Height="215" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0, 0, 0">
            <Label Content="Кол-во строк" VerticalAlignment="Top" HorizontalContentAlignment="Center"  FontSize="16" Margin="10, 0, 10, 0"/>
            <TextBox x:Name="rowText" Text="5"  VerticalAlignment="Top"  Height="30" HorizontalContentAlignment="Center" MinWidth="120" FontSize="16" Margin="10, 0, 10, 0"/>
            <Label Content="Кол-во столбцов"  VerticalAlignment="Top" HorizontalContentAlignment="Center" MinWidth="120" FontSize="16" Margin="0, 0, 0, 0"/>
            <TextBox x:Name="columnText" Text="5"  VerticalAlignment="Top"   Height="30" HorizontalContentAlignment="Center" Margin="10, 0, 10, 10" MinWidth="120" FontSize="16"/>
        <Button Content="Сохранить" Height="30" Width="230"  VerticalAlignment="Top" FontWeight="SemiBold" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
